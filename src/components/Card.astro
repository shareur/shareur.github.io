---
export interface Props {
  item: any;
  lang: 'zh' | 'en';
}
const { item, lang } = Astro.props;
const t = (zh?: string, en?: string) => lang === 'zh' ? (zh ?? en) : (en ?? zh);
---
<a href={item.url} target="_blank" rel="noreferrer" class="block no-underline">
  <div class="rounded-2xl border border-slate-200/80 dark:border-slate-800/80 p-4 hover:shadow-sm transition bg-white/70 dark:bg-slate-900/60 backdrop-blur">
    <h3 class="m-0 text-base font-medium leading-tight">{t(item.title_zh, item.title_en)}</h3>
    {item.desc_zh || item.desc_en ? (
      <p class="mt-1 mb-0 text-sm text-slate-600 dark:text-slate-400">{t(item.desc_zh, item.desc_en)}</p>
    ) : null}
    <p class="mt-1 mb-0 text-xs opacity-70">{new URL(item.url).hostname}</p>
    {item.tags?.length ? (
      <div class="mt-2 flex gap-1 flex-wrap">
        {item.tags.map((tg: string) => (
          <span class="px-2 py-0.5 text-[11px] rounded-full border border-slate-300 dark:border-slate-700">{tg}</span>
        ))}
      </div>
    ) : null}
  </div>
</a>
